{
    "tasks": [
      {
        "name": "Sample Task",
        "enable": true,
        "source_path": "/path/to/source",
        "target_path": "/path/to/target",
        "rules": [
          {
            "name": "Video Files",
            "extensions": ".mp4;.mkv;.avi",
            "method": "copy",
            "attribute": ""
          },
          {
            "name": "Subtitle Files",
            "extensions": ".srt;.ass",
            "method": "strm",
            "attribute": "smb"
          }
        ],
        "enable_watch": true,
        "enable_sync": {
          "enabled": true,
          "schedule": "0 12 * * *"
        }
      },
      {
        "name": "Task 2",
        "enable": false,
        "source_path": "/path/to/another/source",
        "target_path": "/path/to/another/target",
        "rules": [
          {
            "name": "Document Files",
            "extensions": ".pdf;.txt;.docx",
            "method": "copy",
            "attribute": ""
          }
        ],
        "enable_watch": false,
        "enable_sync": {
          "enabled": true,
          "schedule": "30 18 * * *"
        }
      }
    ]
  }
  